<h3 class='cyan-text text-darken-3'>Add Story</h3>
<div class='row'>
  <form action='/stories' method='POST' class='col s12' id='storyForm'>
    <div class='row'>
      <div class='input-field'>
        <input type='text' id='title' name='title' minlength='3' required />
        <label for='title'>Title</label>
      </div>
    </div>

    <div class='row'>
      <div class='input-field'>
        <select id='status' name='status'>
          <option value='public' selected>Public</option>
          <option value='private'>Private</option>
        </select>
        <label for='status'>Status</label>
      </div>
    </div>

    <div class='row'>
      <div class='input-field'>
        <h5>Tell Us Your Story:</h5>
        <textarea id='body' name='body' required></textarea>
      </div>
    </div>

    <div class='row'>
      <input type='submit' value='Save' class='btn cyan darken-3' />
      <a href='/dashboard' class='btn orange'>Cancel</a>
    </div>
  </form>
</div>
<script src='/js/index.js'></script>